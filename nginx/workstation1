upstream buttress_upstream {
    ip_hash;
    server localhost:7001;
}

upstream buttress_test_upstream {
    ip_hash;
    server localhost:7002;
}

server {
    listen 80;
    server_name dev.buttressjs.com dev.local.buttressjs.com;
    root index.html;
    location / {
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_pass http://buttress_upstream;
    }
}
server {
    listen 80;
    server_name test.buttressjs.com test.local.buttressjs.com;
    root index.html;
    location / {
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_pass http://buttress_test_upstream;
    }
}
